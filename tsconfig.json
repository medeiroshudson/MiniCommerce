{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@configuration": ["config"],
      "@minicommerce/*": ["apps/*/src", "packages/*/src"],
      "@minicommerce/shared/*": ["packages/shared/*"],
    }
  },
  "references": [
    {
      "path": "./apps/backend"
    },
    {
      "path": "./packages/shared"
    }
  ],
  "include": ["config", "apps/*/src", "packages/*/src"],
  "exclude": [
    "apps/**/tests/**", "apps/**/dist/**",
    "packages/**/tests/**", "packages/**/dist/**"
  ]
}
